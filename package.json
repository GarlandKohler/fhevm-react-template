{
  "name": "fhevm-sdk-monorepo",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK for building confidential frontends",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "build:sdk": "cd packages/fhevm-sdk && npm run build",
    "dev:nextjs": "cd examples/nextjs-app && npm run dev",
    "dev:futures": "cd examples/confidential-futures-trading && npm run dev",
    "compile:contracts": "cd contracts && npx hardhat compile",
    "test:contracts": "cd contracts && npx hardhat test",
    "deploy:local": "cd contracts && npx hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "cd contracts && npx hardhat run scripts/deploy.js --network sepolia",
    "build": "npm run build:sdk",
    "clean": "rm -rf packages/*/dist packages/*/node_modules examples/*/node_modules node_modules"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "privacy",
    "blockchain",
    "ethereum",
    "sdk",
    "zama"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.22.0"
  }
}
